<div>
  <%= live_redirect to: @link do %>
    <div class="relative">
      <img
        src={@img_src}
        alt={"#{ @title }"}
        class="w-full bg-zinc-800/90 object-cover aspect-auto rounded-md hover:opacity-75"
        loading="lazy"
        >
    </div>
    <p class="mt-4 text-sm line-clamp text-zinc-400">
        <%= @title %>
    </p>
  <% end %>
</div>